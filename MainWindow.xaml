<Window x:Class="TeacherPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeacherPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="Загальна інформація">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="10,10,25,0">
                        <Label>Назва класу:</Label>
                        <Label>Кількість учнів:</Label>
                        <Label>Кількість уроків:</Label>
                    </StackPanel>
                    <StackPanel Margin="10" Grid.Column="1">
                        <Label>Кількість тем:</Label>
                        <Label>Теми:</Label>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Дати"></TabItem>
        </TabControl>
        <Button Grid.Row="1" Margin="10" HorizontalAlignment="Center">Підтвердити</Button>
    </Grid>
</Window>
